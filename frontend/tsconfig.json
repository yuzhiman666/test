{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler", // 关键：使用 bundler 解析模块
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".", // 基础路径为项目根目录
    "paths": {
      "@/*": ["src/*"] // 确保别名 @ 指向 src
    },
    "typeRoots": ["./node_modules/@types", "./src"], // 包含自定义类型目录
    // "types": ["three", "@react-three/fiber"]// 显式指定需要加载的类型
    "types": ["three"] 
  },
  "include": ["src/**/*", "src/declarations.d.ts"], // 关键：包含 src 目录下的所有文件。 确保包含声明文件
  "exclude": ["node_modules"]
  // "references": [{ "path": "./tsconfig.node.json" }]
}